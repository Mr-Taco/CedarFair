doctype html

!= "<!--[if IE 9]>"
html(class='#{deviceInfo} ie9')
!= "<![endif]-->"
!= "<!--[if !IE]>"
html(class='#{deviceInfo}')
!= "<![endif]-->"

html(class='#{deviceInfo}')
    //- HTML HEADER
    head
    
        
        link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
        meta(name="format-detection" content="telephone=no")
    
    
        //- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
        //- Safely remove this block if you are not targeting IE8
        //-[if lt IE 9]
            script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
            script(src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")
        //-[endif]
    
        //- Include template-specific stylesheets by extending the css block
        link(href="/styles/vendors.css", rel="stylesheet")
        block css
    
        //- Add any other template-specific HEAD tags by extending the head block
        block head
            meta(charset="utf-8")
            meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
            meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
            
            if content.metadata !== undefined
                title= content.metadata.title
                meta(name="description", content="#{content.metadata.metaDesc}")
                meta(name="keywords", content="#{content.metadata.metaKeywords}")
    
                meta(property="og:title", content="#{content.metadata.ogTitle}")
                meta(property="og:url", content="#{content.metadata.ogURL}")
                meta(property="og:image", content="#{content.metadata.ogImage}")
                meta(property="og:description", content="#{content.metadata.ogDesc}")
            else
                title= "Cedar Fair"
    //- HTML BODY
    body(data-cdn="#{cdn_root}")
        header
            block nav
                include ../views/partials/header
    
        #content
            block content
                
            //- FOOTER
            footer
                block footer
                    include ../views/partials/footer
                        
        #iefallback
            include ../views/partials/ie9fallback
    
            //- FOOTER
            footer
                block footer
                    include ../views/partials/footer
                        
                        
        include ../views/partials/overlay
    
        //- JAVASCRIPT
    
    
    
        //- Add scripts that are globally required by your site here.
    
    
        //- Include template-specific javascript files by extending the js block
        script(src='/js/vendors.js')
        script.
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }
                    , i[r].l = 1 * new Date();
                a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-30018-15', 'auto');
            ga('send', 'pageview');
    
        block js
            





