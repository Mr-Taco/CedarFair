#stock-ticker
    padding: 15px 0;
    /*width: 500%;*/
    background: url('../images/BG/stock-ticker-bg.jpg')
    background-repeat: repeat-x
    background-size:auto 100%
    position: relative
    overflow: hidden

    .ticker-list-wrapper
        display: inline-block
        width: 250000px
        height: 41px
        position: relative
        
        .ticker-list
            display: inline-block
            // position: absolute

        span
            display: inline-block
            text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.75)

            p
                color: #e0edf3
                font-size: 38px
                /*position: absolute*/
                /*top: 23px*/
                display: inline-block
                margin: 0px 20px
                text-transform: uppercase
                font-family:"lcd"
                letter-spacing:2px


                &.ticker-amount
                    margin: 0 60px 0 20px

            img
                display: inline-block
                max-height: 30px


    @media (max-width:640px)
        padding:12px 0
        .ticker-list-wrapper
            height:32px
            span
                p
                    font-size:32px

                    &.ticker-amount
                        margin: 0 30px 0 12px

                img
                    width:28px
