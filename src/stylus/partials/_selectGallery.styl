@import "../mixins/index.styl"

.select-gallery
    margin: 25px 0 0
    ul
        height:100%
        position:relative
        width:660px
        height:180px
        margin:0 auto
        li.group-info
            position:absolute
            width:100%
            height:100%
            margin:0 auto
            visibility:hidden
            opacity:0
            
            &.selected 
                visibility:visible
                opacity:1
                
            @media(max-width: 992px)
                left: 5%
                width:90%

            .right , .left
                width:50%
                height:100%
                float:left
                text-align:left

                @media(max-width: 992px)
                    width: 45%
                
            .left
                @media(max-width: 992px)
                    margin-right: 5%





            .info-container
                padding-left:35px
                position:relative

            h2
                fontFamily(GothamBlack)
                font-size:1.5em
                color:lightGray


            p
                fontFamily(GothamBook)
                font-size:1em
                color:#838282
                padding-top:5px
                        
