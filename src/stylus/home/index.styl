        font-size: 1.5em;
        line-height: 1.3em;
    #home-section6
        background-size: cover //auto 100%
        margin-top: -45px
    
    .btn-wrapper 
        .btn
            line-height: 1.5em
        #seasonal-learn-more
            width: 72%

    #jobs-section
        .fa-angle-right:before, .fa-angle-left:before
            line-height: 50px;
    #jobs-buttons
        a.btn
            line-height: 1em

@media (max-width: 767px)
    #seasonal-mobile-padding
        width: 100%
        padding-bottom: 112%
    
    #seasonal
        padding-top: 0px;

        .arms
            display:none;

        .overlay
            background: none

        .content
            position: relative
            bottom: auto

        #seasonal-video-gallery
            .left, .right
                float:none
                width: auto
                margin: 0 auto
            .container
                background:none
                margin-top: 0

    #home-section6
        background-image: url(/images/BG/haunt-mobile.png);
        height:auto
        background-size: cover;

    .overlay
        display:none
