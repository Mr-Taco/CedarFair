@media (max-width: 767px )
    #home-section5
        padding: 60px 0
        background-size: auto 100%
        height:700px

@import '../partials/_homeSponsorships.styl'

@import '../partials/_homeSeasonal.styl'
//Section 6
#home-section6
    background-image: url('../images/BG/haunt-ground.jpg')
    background-position: center 0px
    background-size: 1920px auto
    background-repeat: no-repeat
    margin: -5px auto 0
    height:1175px
    overflow: hidden 

@media (max-width: 767px) and (min-width: 426px)
    #home-section6
