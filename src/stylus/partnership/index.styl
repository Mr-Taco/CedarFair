@import '../global/index.styl'
@import '../partials/_selectGallery.styl'


#sponsorship-section1
    .clouds#section1
        .one
            transform:translateY(200px)
        .two
            transform:translateY(525px)

    skyBackground()
    padding: 255px 0 230px
    text-align: center
    
    .title-bucket
        h1,h2,p
            opacity: 0

    .circ-btn-wrapper
        margin: 100px auto

    #select
        margin: 0px auto 0
        background:#ffffff 
        max-width:920px
        min-width:660px
        height:450px
        opacity: 0
        
        addShadow(920px,80px,450px)
        
        h1,h2
            opacity: 1
        
        h2
            font-size: 3.825em
            letter-spacing: -3px
            
        #thrilling-numbers-wrapper
            height: 100px
            position: relative

            &.add-border-fade:before, &.add-border-fade:after
                background-size: 4px 100%
            
            &.add-border-fade:before
                left: 121px

                @media(min-width: 993px)
                    left:161px

            &.add-border-fade:after
                right: 121px

                @media(min-width: 993px)
                    right:161px
                
        .swiper-container, .swiper-wrapper, .swiper-slide
            height: 100px !important

        .swiper-container
            overflow:hidden
            margin: 0 auto -50px
            width: 65%
            
            ul
                height:90px
                
                li
                    width:100%
                    float:left
                    display: table
                    height: 100%
                    
                    .info-container
                        display:table-cell
                        vertical-align:middle

                    p
                        fontFamily(GothamLight)
                        font-size:2em
                        color:darkGray
                        /*max-width:390px*/
                        margin:0 auto
                    
        .gal-arrow
            color:lightBlue 
            top: 215px
            
            @media(min-width: 993px)
                top: 235px
            
            &.fa-angle-left 
                left: 85px
            
            &.fa-angle-right
                right: 85px
            
            
        .btn
            height: 53px
            line-height: 1.5em
            width:251px
            margin-top: 85px
        
        .title-bucket
            padding-top:60px
            

        .legal 
            width: 100%
            height: 44px
            background: #1d55a2
            position: absolute
            bottom: 0
            
            span
                color:#ffffff
                font-size:0.7em
                fontFamily(GothamBook)
                line-height: 44px
    #typeDescriptions
        #select-sponsorships
            p.typeDescription
                display:none;
                position: absolute
                top: 0px
            
#partnership-contact-form
    .form-fields
        overflow:visible
        
@media(max-width:767px)
    .btn
        font-size: 1.3em
    #sponsorship-section1
        padding: 0
        
        .section-inner
            max-width: 100%
            
            .title-bucket
                h1,h2,p
                    opacity: 1
            
            .inner-title-header.title-bucket.two
                max-width: 90%
                height: 435px

            #select
                width: 100%
                min-width: 100%
                max-width: 100%
                height: auto
                opacity: 1

                .btn
                    margin-top: 35px
                    font-size: 1.3em
                    
                #thrilling-numbers-wrapper
                    height: auto
                h2 
                    font-size: 3em
                    
                &:before
                    background: none
                    
                .title-bucket.two
                    width: 90%
                    margin: 0 auto
                    
                .swiper-pagination-switch
                    background-color: lightBlue
                    
                .swiper-active-switch
                    background-color: darkBlue
                    
                .swiper-container
                    width: 90%
                    height: auto !important
                    margin: 15px auto 15px
                    
                    ul
                        height: 150px !important
                        li 
                            height: 100% !important
                            
                            div.info-container
                                p
                                    width: 75%
                                    display: block
                .gal-arrow
                    top: 20%
                    
                    &:before
                        background-color: white
                                  
                    &.fa-angle-left
                        left: 6%
                        
                    &.fa-angle-right
                        right: 6%
                        
                    &:hover, &.hover
                        transform: scale(1.1, 1.1) translate3d(0,0,100px) !important
                        
                    &:active, &.active
                        transform: scale(1.05, 1.05) translate3d(0,0,100px) !important
                        
    
                .legal
                    position: static
                    margin-top: 40px



#sponsorship-section2
    padding: 80px 0 0
    background-color: lightBlue
    background-size: cover
    text-align: center
    
    .section-inner
        max-width: 1080px
    
    .title-bucket.five
        h1
            font-size:3.3em
            word-wrap: break-word
        h2
            font-size:1.75em
            
    .gallery-wrapper
        position: relative 
        padding-top: 40px
        width: auto
        margin: 0 auto
        
        @media(max-width: 992px)
            width: 760px
            
        .swiper-container, .swiper-wrapper, .swiper-slide
            height: 375px !important
            /*pointer-events: none*/
            /*cursor: default;*/
            
        .swiper-container
            width: 910px
            margin-bottom: 100px
            
            @media(max-width:992px)
                width: 660px
            
                .swiper-slide
                    width: 220px

    .gal-arrow
        top: 56%
        /*display: none !important*/
        
        &.fa-angle-right
            right: 6%

            @media(max-width: 992px)
                right: 10%
            
        &.fa-angle-left
            left: 6%

            @media(max-width: 992px)
                left: 10%

    .circle-list
        margin:36px auto
        
        
        a.btn
            width:200px
            margin-top:35px
            
@media(max-width:767px)
    #sponsorship-section2
        padding-bottom: 50px
        
        .gallery-wrapper
            width: 100%
            padding-top: 0
        
            .swiper-container
                width: calc(100% - 80px) !important
                height: auto
                margin-bottom: 0
                
                ul.swiper-wrapper
                    height: 275px !important
                    li.swiper-slide
                        height: 100% !important
                        
                        .center-inner
                            h1
                                font-size: 1.1em
                            h2
                                font-size: 1em
                            
        .gal-arrow
            top: 45% !important
            color: white
            
            &.fa-angle-right
                right: 6%
                
            &.fa-angle-left
                left: 6%
        
            &:hover, &.hover
                transform: scale(1.1, 1.1) translate3d(0,0,100px) !important
        
            &:active, &.active
                transform: scale(1.05, 1.05) translate3d(0,0,100px) !important
            
    .circle-list
        margin-top: 10px
                

#overlay-basic-inner .form-object #errors
    padding: 0 50px 12px

.form-fields
    overflow: visible
    .long-captions
        .radios
            overflow: auto
            div.controls
                float: left;
                margin-top: 17px;
    a.btn
        margin-top: 20px
