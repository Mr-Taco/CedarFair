#overlay-basic-inner p
    font-size: .75em;
    strong
        fontFamily(GothamBold)

        


@media (max-width:767px)
    #whoweare-section1 .video-button .play-icon 
        max-width: 100%
        height: 100%
        transform: translate(0, -101%);

    #who-we-are
        max-width: 100%
    
    #whoweare-section1
        padding-top: 140px
        font-size: 17px
    
        #player-container .video-button
            padding-bottom: 1.3em
            
        .title-bucket
            h1, h2, p
                opacity: 1
                
            h1, h2
                font-size: 45px
                
            &.six
                h1
                    font-size: 30px
    
        a.btn
            line-height: 21px
            opacity: 1
            transform: scale(1, 1)
        
    .title-bucket
        max-width: 90%
        margin: 0 auto
